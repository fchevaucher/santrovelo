<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<%= form_tag("/members", method: :get) do |f| %>
  <div class="field">
    <%= text_field_tag :search %>
    <%= submit_tag "Search" %>
  </div>
<% end %>

<%= link_to 'New Member', new_member_path %>

<br/><br/>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone number</th>
      <th>Valid membership</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.email %></td>
        <td><%= member.phone_number %></td>
        <td><%= member.has_valid_membership? %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
